﻿@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Index</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>

            <td>@x.CategoryId</td>
            <td>@x.CategoryName</td>
            <td><a href="/AdminCategory/DeleteCategory/@x.CategoryId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/AdminCategory/EditCategory/@x.CategoryId" class="btn btn-outline-warning">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-primary">Başlıklar</a></td>
        </tr>
    }
</table>

<br />
<a href="/AdminCategory/AddCategory/" class="btn btn-outline-info">Yeni Kategori</a>