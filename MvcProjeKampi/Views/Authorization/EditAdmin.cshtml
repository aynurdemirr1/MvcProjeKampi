﻿﻿@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Admin ID")
        @Html.HiddenFor(r => r.AdminID, new { @class = "form-control" })

        <br />
        @Html.Label("Kullanıcı Adı")
        @Html.TextBoxFor(r => r.AdminUserName, new { @class = "form-control" })

        <br />
        @Html.Label("Şifre")
        @Html.TextBoxFor(r => r.AdminPassword, new { @class = "form-control" })

        <br />
        @Html.Label("Rol")
        @Html.TextBoxFor(r => r.AdminRole, new { @class = "form-control" })

        <br />
        <button class="btn btn-info">Güncelle</button>

    </div>
}